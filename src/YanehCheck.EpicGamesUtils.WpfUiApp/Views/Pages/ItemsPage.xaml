<Page
    x:Class="YanehCheck.EpicGamesUtils.WpfUiApp.Views.Pages.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YanehCheck.EpicGamesUtils.WpfUiApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:YanehCheck.EpicGamesUtils.WpfUiApp.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ItemsPage"
    d:DataContext="{d:DesignInstance local:ItemsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="675"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBox 
                Grid.Column="0"
                Width="200px"
                Text="{Binding ViewModel.Search, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding ViewModel.FilterOrSearchUpdateCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ui:TextBox>
            <ui:Button 
                Grid.Column="1"
                Margin="10,0,0,0"
                Content="Source"/>
            <ui:Button 
                Grid.Column="2"
                Margin="10,0,0,0"
                Content="Rarity"/>
            <ui:Button 
                Grid.Column="3"
                Margin="10,0,0,0"
                Content="Season"/>
            <ui:Button 
                Grid.Column="4"
                Margin="10,0,0,0"
                Content="Tag"/>
            <ui:Button
                Grid.Column="5"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Content="Sort" />
            <ui:Button 
                Grid.Column="6"
                Margin="0,0,10,0"
                HorizontalContentAlignment="Right"
                Icon="ArrowDownload24"/>
        </Grid>
        <ui:VirtualizingItemsControl
            Grid.Row="1"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            d:ItemsSource="{d:SampleData}"
            ItemsSource="{Binding ViewModel.PresentedItems, Mode=OneWay}"
            VirtualizingPanel.CacheLengthUnit="Item">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ItemWithImageModel}">
                    <Border
                        Width="105"
                        Height="130"
                        Margin="2"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="4">
                        <Border.Background>
                            <ImageBrush 
                                ImageSource="{Binding BitmapFrame, Mode=OneWay}"
                                RenderOptions.BitmapScalingMode="LowQuality"/>
                        </Border.Background>
                        <ui:Button
                            Width="105"
                            Height="130"
                            CornerRadius="4"
                            Background="#00000000"
                            MouseOverBackground="#30FFFFFF"
                            >

                        </ui:Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ui:VirtualizingItemsControl>
    </Grid>
</Page>
