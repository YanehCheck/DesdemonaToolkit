                            <ui:Button
                                Grid.Row="1"
                                Width="105"
                                Height="130"
                                CornerRadius="4"
                                Background="#00000000"
                                MouseOverBackground="#30FFFFFF"
                                ToolTip="{Binding Name, Mode=OneTime}"
                                Command="{Binding ToggleItemDetailFlyoutCommand}"
                            />
